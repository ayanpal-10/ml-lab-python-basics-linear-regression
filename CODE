# Import required libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error


# Load dataset
# Make sure the CSV file is in the same folder as the notebook
df = pd.read_csv("/book_sales.csv")


# Display columns to verify (optional but useful)
print(df.columns)


# Rename 'Date' column to 'Month'
df.rename(columns={'Date': 'Month'}, inplace=True)


# Create total book sales column
df['Booksales'] = df['Paperback'] + df['Hardcover']


# Remove missing values (if any)
df.dropna(inplace=True)


# Create a time index for regression
df['Time'] = np.arange(len(df))


# Independent and dependent variables
X = df[['Time']]          # Must be 2D
y = df['Booksales']       # 1D


# Train Linear Regression model
model = LinearRegression()
model.fit(X, y)


# Predict values
y_pred = model.predict(X)


# Calculate errors
mse = mean_squared_error(y, y_pred)
rmse = np.sqrt(mse)

print("Mean Squared Error (MSE):", mse)
print("Root Mean Squared Error (RMSE):", rmse)


# Plot actual vs predicted values
plt.scatter(df['Time'], y, color='blue', label='Actual Sales')
plt.plot(df['Time'], y_pred, color='red', label='Best Fit Line')

plt.xlabel("Time (Months)")
plt.ylabel("Total Book Sales")
plt.title("Linear Regression on Book Sales Dataset")
plt.legend()
plt.show()
